<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    	<!-- Extension of an existing res.partner mask -->
        <record id="eq_foreign_ref_partner_extension_form" model="ir.ui.view">
            <field name="name">eq.foreign.ref.partner.extension.form</field>
            <field name="model">res.partner</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">                              
                <field name="email" position="after">
                	<field name="eq_foreign_ref" attrs="{'invisible': [('customer', '=', False), ('supplier', '=', False), ('eq_prospective_customer', '=', False), ('eq_unlocked_for_webshop', '=', False)]}"/>
                </field>
			</field>
		</record>		
	</data>
</openerp>