<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
<template id="eq_external_layout_header_purchase_order_data">
    <div class="header">
		<div class="row">
			<div class="col-xs-7"/>
	        <div class="col-xs-5">
                <table style="width:100%; float:right;">
                    <tbody>
                        <tr>
                            <td/>
                        </tr>
                        <tr t-if="o.partner_id.eq_creditor_ref">
                            <td>
                                <span>Supplier no.</span>
                            </td>
                            <td class="text-right">
                                <span t-field="o.partner_id.eq_creditor_ref" id="eq_creditor_ref"/>
                            </td>
                        </tr>
                        <tr t-if="o.partner_ref">
                            <td>
                                <span>Your order reference</span>
                            </td>
                            <td class="text-right">
								<div class="referencecontainer"><span t-field="o.partner_ref"/></div>
                            </td>
                        </tr>
                        <tr t-if="o.name">
                            <td>
                                <span>Our order reference</span>
                            </td>
                            <td class="text-right">
                                <div class="referencecontainer"><span t-field="o.name"/></div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <span>Order date</span>
                            </td>
                            <td class="text-right">
                                <span t-esc="o.date_order.split(' ')[0].split('-')[2] + '.' + o.date_order.split(' ')[0].split('-')[1] + '.' + o.date_order.split(' ')[0].split('-')[0]"/>
                            </td>
                        </tr>
                        <tr>
                            <td/>
                        </tr>
                    </tbody>
                </table>
			</div>
		</div>
    </div>
</template>

<!-- header -->
<template id="eq_external_layout_header_purchase_order">
	<div class="header">
		<div class="row zero_min_height reportlogo">
			<div>
				<img t-if="company.eq_report_logo"
					t-att-src="'data:image/png;base64,%s' % company.eq_report_logo"
					style="margin-right:15px; float:right;" class="text-right" />
				<!--<img t-if="company.logo" t-att-src="'data:image/png;base64,%s' 
					% company.logo" style="max-height: 2cm; margin-right:0.25cm; float:right;" 
					class="text-right"/> -->
			</div>
		</div>
		<t t-call="equitania.eq_external_layout_header_purchase_order_data"/> 
		<div class="row zero_min_height">
			<t t-raw="0" />
			<div class="col-xs-12">
				<div style="font-size:6.5pt;text-decoration: underline;" />
				<!--<div style="border-bottom: 1px solid black;"/> -->
			</div>
		</div>
	</div>
</template>

<template id="external_layout_purchase_order">
    <!-- Multicompany -->
    <t t-if="o and 'company_id' in o">
        <t t-set="company" t-value="o.company_id"></t>
    </t>
    <t t-if="not o or not 'company_id' in o">
        <t t-set="company" t-value="res_company"></t>
    </t>

    <t t-call="equitania.eq_external_layout_header_purchase_order" />
    <t t-raw="0" />
    <t t-call="report.external_layout_footer" />
</template>

<template id="report_purchaseorder_data" active="True">
    <div class="page">
        <div class="oe_structure"/>
        <div class="row">
            <div class="col-xs-7 addressmargin">
                <div class="row col-xs-12 returnaddress">
                    <h t-field="o.company_id.name"/> -
					<h t-field="o.company_id.street"/><span t-if="o.company_id.eq_house_no"> <span t-field="o.company_id.eq_house_no"/></span> -
                    <h t-field="o.company_id.zip"/>
                    <h t-field="o.company_id.city"/>
                </div>
                <div t-if="o.partner_id.is_company">
                    <div  style="clear:left;">
                        <h t-if="o.partner_id.title.name" t-field="o.partner_id.title.name"  />
                        <h t-if="o.partner_id.eq_firstname" t-field="o.partner_id.eq_firstname" />
                        <h t-field="o.partner_id.name" />
                    </div>
                    <div t-if="o.partner_id.eq_name2" t-field="o.partner_id.eq_name2"
                        style="clear:left;" />
                    <div t-if="o.partner_id.eq_name3" t-field="o.partner_id.eq_name3"
                        style="clear:left;" />
                </div>
                <div t-if="not o.partner_id.is_company">
                    <div t-field="o.partner_id.parent_id.name" style="clear:left;" />
                    <div t-if="o.partner_id.parent_id.eq_name2" t-field="o.partner_id.parent_id.eq_name2"
                        style="clear:left;" />
                    <div t-if="o.partner_id.parent_id.eq_name3" t-field="o.partner_id.parent_id.eq_name3"
                        style="clear:left;" />
                    <span t-field="o.partner_id.title.name" />
                    <span t-field="o.partner_id.eq_firstname" style="clear:left;" />
                    <span t-field="o.partner_id.name" style="clear:left;" />

                </div>
                <div>
                    <span t-field="o.partner_id.street" />
                    <span t-if="o.partner_id.eq_house_no" t-field="o.partner_id.eq_house_no" />
                </div>
                <div t-if="o.partner_id.street2">
                    <div t-field="o.partner_id.street2" />
                </div>
                <h>
                    <h t-field="o.partner_id.zip" />
                    <h t-field="o.partner_id.city" />
                    <h t-if="o.partner_id.eq_citypart">
                        -
                        <h t-field="o.partner_id.eq_citypart" />
                    </h>
                </h>
                <div t-field="o.partner_id.country_id.name" />
            </div>
            <div class="col-xs-5">
                <h class="contactpersonheader" t-if="o.eq_contact_person_id">
                    <strong>For further information, please contact</strong>
                </h>
                <table style="width:100%;" t-if="o.eq_contact_person_id">
                    <tbody>
                        <tr>
                            <td>
                                <span>Contact person</span>
                            </td>
                            <td class="text-right">
                                <span t-field="o.eq_contact_person_id.name"/>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <span>Phone</span>
                            </td>
                            <td class="text-right">
                                <span t-field="o.eq_contact_person_id.work_phone"/>
                            </td>
                        </tr>
                           <tr t-if="o.eq_contact_person_id.eq_work_fax">
                               <td>
                                   <span>Fax</span>
                               </td>
                               <td class="text-right">
                                   <span t-field="o.eq_contact_person_id.eq_work_fax"/>
                               </td>
                           </tr>
 							<tr>
							<td colspan="2">
								<span>E-Mail</span>
								<div style="float:right;">
                                       <span t-field="o.eq_contact_person_id.work_email"/>
                                   </div>
							</td>
						</tr>
                    </tbody>
                </table>
            </div>
        </div>
        
        <h2 style="margin-bottom:25px; margin-top:25px" >Purchase Order
            
            <span t-field="o.name"/>
        </h2>
		<p t-if="o.eq_head_text" style="margin-bottom:0.3cm!important;"><span t-field="o.eq_head_text"/></p>
		
		<!-- Pagebreak after headertext -->
		<p t-if="o.eq_use_page_break_after_header" style="page-break-after:always;"> </p>
				
        <p>
            <span t-field="o.origin"/>
        </p>
        <!--<table class="table text-right" style="background-color: #f2ffb3;">
            <thead>
                <tr>
                    <th class="text-right">
                        <strong>Übertrag</strong>
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr t-as="line">
                    <td>
                        12345,67 €
                    </td>
                </tr>
            </tbody>
        </table>-->
        <table class="table table-condensed" >
            <thead>
                <tr>
                    <th style="min-width:2.6cm;">
                        <strong>Item no.<!--  Artikel Nr. --></strong>
                    </th>
                    <th>
                        <strong>Item description<!-- Beschreibung --></strong>
                    </th>
                    <th class="text-center" colspan="2">
                        <strong>Qty.<!-- Menge --></strong>
                    </th>
                    <!-- <th class="text-right">
                        <strong>Unit</strong>
                    </th>--><!--  Einheit-->
                    <th class="text-right" style="min-width:2.3cm;">
                        <strong>Unit price<!-- Preis --></strong>
                    </th>
                    <!-- Preis Netto -->
                    <th class="text-right" style="min-width:2.7cm;"><strong>Net price</strong></th>
                </tr>
            </thead>
            <tbody>
                <tr t-foreach="o.order_line" t-as="line">
                    <td>
                        <span t-field="line.product_id.default_code"/>
                    </td>
                    <td>
                        <strong><span t-field="line.product_id.name"/></strong>
                        <div t-if="line.name and line.name != ' '">
	                        <span t-field="line.name"/>
                        </div>
                        <div t-if="o.show_delivery_date">
	                        <div class="clearfix"><strong >Delivery date: <span t-field="line.get_delivery_date"/></strong></div>
                        </div>
                        <div id="agreement_id"/>
                    </td>
                    <td class="text-right">
                        <span t-esc="get_qty(line.product_qty, o.partner_id.lang)"/>
                    </td>
                    <td class="text-right">
                        <span t-field="line.product_uom.name"/>
                    </td>
                    <td class="text-right">
                        <span t-esc="get_price(line.price_unit, o.partner_id.lang, o.currency_id)"/>
                    </td>
                    <td class="text-right">
                        <span t-esc="get_standard_price(line.price_subtotal, o.partner_id.lang, o.currency_id)"/>
                    </td>
                </tr>
            </tbody>
        </table>
        <div class="row padding-fix" style="">
            <div>
                <table class="table" rules="none" style=" border: 1px solid #999999;">
                    <thead>
                        <tr><!-- class="border-black"-->
                            <td class="text-right">
                                <strong>Total without taxes<!-- Preis Netto --></strong>
                            </td>
							<!--  NEUE STEUERSPALTE -->
							<td class="text-right" t-foreach="set([x.taxes_id for x in o.order_line])" t-as="tax_line">
								<strong>
									<span t-esc="tax_line.name" />
								</strong>
							</td>
                            <td class="text-right">
                                <strong>Total sum<!-- Preis Brutto --></strong>
                            </td>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="text-right">
                                <span t-esc="get_standard_price(o.amount_untaxed, o.partner_id.lang, o.currency_id)"/>
                            </td>
							<!--  NEUE STEUERSPALTE -->
							<td class="text-right" t-foreach="set([x.taxes_id for x in o.order_line])" t-as="tax_line">
								<strong>
									<span
								t-esc="get_tax(o, tax_line, o.partner_id.lang, o.currency_id)" />
								</strong>
							</td>
                            <td class="text-right">
                                <span t-esc="get_standard_price(o.amount_total, o.partner_id.lang, o.currency_id)"/>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <!-- Pagebreak before footertext -->
            <p t-if="o.eq_use_page_break_before_footer" style="page-break-after:always;"> </p>

            <table>
               	<tbody>
                       <tr t-if="o.notes">
                           <td styles=" vertical-align:top;">
                               <p t-field="o.notes"/>
                           </td>
                       </tr>
               	</tbody>
               </table>
            <table class="col-xs-3" style="width:90%;">
            	<tr>
            		<td style="vertical-align:top; width:50%;" t-if="o.payment_term_id or o.incoterm_id">
            			<table class="col-xs-3" style="width:auto!important; max-width:90%; min-width:8cm;">
			                <tbody>
			                    <tr style="vertical-align:top;">
			                        <td t-if="o.payment_term_id" style="padding-right:0.5cm; padding-bottom:0.3cm;">
			                            Term of payment:
			                        </td>
			                        <td t-if="o.payment_term_id">
			                            <span t-field="o.payment_term_id"/>
			                        </td>
			                    </tr>
			                    <tr style="vertical-align:top;">
			                        <td t-if="o.incoterm_id" style="padding-right:0.5cm; padding-bottom:0.3cm;">
			                            Incoterm:
			                        </td>
			                        <td t-if="o.incoterm_id">
			                            <span t-field="o.incoterm_id.name"/>
			                        </td>
			                    </tr>
			                </tbody>
			            </table>
            		</td>
            		<td style="vertical-align:top; width:50%;">
            			<table t-if="o.picking_type_id.warehouse_id.partner_id" class="col-xs-3" style="width:auto!important; max-width:90%; min-width:8cm;">
			                <tbody>
			                    <tr style="vertical-align:top;">
			                    	<td style="padding-right:0.5cm; font-weight:bold;">
			                    		Deliver to:
			                    	</td>
			                    </tr>
			                    <tr>
			                    	<td>
			                    		<div t-field="o.picking_type_id.warehouse_id.partner_id.name"/>
			                    		<div t-if="o.picking_type_id.warehouse_id.partner_id.eq_name2" t-field="o.picking_type_id.warehouse_id.partner_id.eq_name2"/>
			                    		<div t-if="o.picking_type_id.warehouse_id.partner_id.eq_name3" t-field="o.picking_type_id.warehouse_id.partner_id.eq_name3"/>
			                            <div>
											<span t-field="o.picking_type_id.warehouse_id.partner_id.street"/><span t-if="o.picking_type_id.warehouse_id.partner_id.eq_house_no" t-field="o.picking_type_id.warehouse_id.partner_id.eq_house_no" />
										</div>
						                <div t-if="o.picking_type_id.warehouse_id.partner_id.street2">
						                    <div t-field="o.picking_type_id.warehouse_id.partner_id.street2"/>
						                </div>
						                <h t-if="o.picking_type_id.warehouse_id.partner_id.zip">
						                    <h t-field="o.picking_type_id.warehouse_id.partner_id.zip"/>
						                    <h t-field="o.picking_type_id.warehouse_id.partner_id.city"/>
											<h t-if="o.picking_type_id.warehouse_id.partner_id.eq_citypart">-
												<h t-field="o.picking_type_id.warehouse_id.partner_id.eq_citypart"/>
											</h>
						                </h>
			                            <div t-field="o.picking_type_id.warehouse_id.partner_id.state_id"/>
			                            <div t-field="o.picking_type_id.warehouse_id.partner_id.country_id"/>
			                    	</td>
			                    </tr>
			                </tbody>
			            </table>
                       </td>
            	</tr>
            </table>
        </div>
    <div class="oe_structure"/>
    </div>
</template>

<template id="purchase.report_purchaseorder_document" active="True"><!-- account.report_invoice_document--><!-- #A -->
	<t t-call="equitania.external_layout_purchase_order"><!-- Multicompanycontainer inkl separatem header  -->
		<t t-call="equitania.report_purchaseorder_data" /><!-- Contentblock -->
	</t>
</template>

</data>
</openerp>
