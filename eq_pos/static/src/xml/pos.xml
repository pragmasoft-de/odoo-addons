                <table id="all_buttons_table">
                    <tr>
                        <td style="padding-bottom:5px;">
                            <button type="button" id="add_gift_coupon" style="font-size:13px;font-weight:bold;padding:0 7px;">
                                Add Gift Coupon
                            </button>
